<div class="container" id="weightloss">
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Target Weight</th>
        <th>Actual Weight</th>
        <th>Met/Not Met</th>
        <th style="width:20%">Notes/Reflections</th>
      </tr>
    </thead>
    <tbody id="output">
      <!-- Your JavaScript function will add rows to this table body -->
    </tbody>
  </table>
</div>

<div id="modal-card" class="modal">
  <div class="modal-content">
    <span class="close-button">&times;</span>
    <div class="modal-header">
      <h3 id="date-label"></h3>
    </div>
    <div class="modal-body">
      <label for="actualWeight">Actual Weight:</label>
      <input type="number" name="actualWeight" id="actualWeight">
      <br>
      <label for="met">Met/Not Met:</label>
      <select id="met" name="met">
        <option value="Met">Met</option>
        <option value="Not Met">Not Met</option>
      </select>
      <br>
      <label for="notes">Notes/Reflections:</label>
      <textarea name="notes" id="notes"></textarea>
    </div>
    <div class="modal-footer">
      <button id="save-button">Save</button>
    </div>
  </div>
</div>
