<!-- cards scroller view -->
<section id="cards-scroller">
  <nav>
    <form id="search-form">
      <input type="text" id="search-input" placeholder="Search...">
      <button type="submit" id="search-button">Search</button>
    </form>
  </nav>

  <section id="card-display">
    {{#each questions}}
    <div class="card">
      <div class="card-head">
        <p>Question {{question_id}}</p>
        <p>Difficulty Level {{difficulty_level}}</p>
      </div>

      <div class="card-question">
        <fieldset>
          <legend><strong>{{question}}</strong></legend>
            {{#each options}}
            <input type="radio" id="{{this}}" name="answer_option" value="{{this}}">
            <label for="answer_option">{{this}}</label>
            {{/each}}
        </fieldset>
      </div>
      
      <div class="card-solution">
        <p>Correct Option: {{correct_option}}</p>
        <p>Explanation: {{explanation}}</p>
        </div>
        <div class="card-detail-help">
        <p>Resources:</p>
        <ul>
          <li>Docs: <a href="{{resources.documentation_link}}">{{resources.documentation_link}}</a></li>
          <li>Video: <a href="{{resources.video_link}}">{{resources.video_link}}</a></li>
        </ul>
      </div>
    </div>
    {{/each}}
  </section>

  <section id="filter">
  </section>